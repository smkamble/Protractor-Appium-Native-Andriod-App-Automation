{
  "compilerOptions": {
      "baseUrl": ".",
      "paths": { "*": ["types/*"] },
      "module": "commonjs",
      "target": "es6",
      "moduleResolution": "node",
      "sourceMap": false,
      "declaration": false,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "removeComments": false,
      "noImplicitAny": false,
      //"outDir": "typeScript",
      "typeRoots": [ "./node_modules/@types" ],
      "types": ["node","jasmine","typescript"]
  },
  "exclude": [
      "node_modules",
      "typescript"
  ]
}
